<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MovieDetailActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/movie_backdrop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/image_backdrop_desc"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/backdrop_poster" />

        <TextView
            android:id="@+id/movie_original_title_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_condensed_bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_backdrop"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Harry Potter" />

        <TextView
            android:id="@+id/release_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/release_date_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            app:layout_constraintBottom_toTopOf="@+id/movie_release_date_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_rate_detail" />

        <TextView
            android:id="@+id/movie_rate_detail"
            style="@style/DetailedTextView"
            android:drawableEnd="@android:drawable/star_on"
            android:drawablePadding="@dimen/small_margin"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/release_date_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_original_title_detail"
            tools:text="6.9" />

        <TextView
            android:id="@+id/movie_release_date_detail"
            style="@style/DetailedTextView"
            app:layout_constraintBottom_toTopOf="@+id/movie_overview_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/release_date_label"
            tools:text="19/10/2018" />


        <TextView
            android:id="@+id/movie_overview_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_release_date_detail"
            tools:text="1940s for the double murder of his wife and her lover, upstanding banker Andy Dufresne
        begins a new life at the Shawshank prison, where he puts his accounting skills to work for
        an amoral warden. During his long stretch in prison, Dufresne comes to be admired by the
        other inmates -- including an older prisoner named Red -- for his integrity and unquenchable
        sense of hope." />
    </android.support.constraint.ConstraintLayout>
</ScrollView>